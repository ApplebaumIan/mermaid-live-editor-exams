{
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "cypress/**/*.ts",
    "cypress/**/*.js",
    "cypress/**/*.json",
    "static/**/*.js",
    "static/**/*.json",
    "playwright.config.ts",
    "tests/**/*.ts"
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "types": ["vitest/importMeta", "@playwright/test"]
  },
  "extends": "./.svelte-kit/tsconfig.json"
}
